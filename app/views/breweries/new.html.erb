<h1>Add Brewery</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@brewery) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :desc %>
      <%= f.text_area :desc, :rows => "10" %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :zip %>
      <%= f.text_field :zip %>

      <%= f.label :country %>
      <%= f.text_field :country %>

      <%= f.label :web %>
      <%= f.text_field :web, value: 'http://' %>

      <%= f.label :facebook %>
      <%= f.text_field :facebook %>

      <%= f.label :twitter %>
      <%= f.text_field :twitter %>

      <%= f.submit "Add Brewery", class: "btn btn-large btn-warning" %>
    <% end %>
  </div>
</div>