<% provide(:title, 'Add Beer') %>
<h1>Edit Beer</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@beer) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :desc %>
      <%= f.text_area :desc, :rows => '10' %>

      <%= f.label :abv %>
      <%= f.text_field :abv %>

	  <%= f.label :ibu %>
      <%= f.text_field :ibu %>

      <%= f.label :style %>
      <%= f.text_field :style %>

      <%= f.label :brewery_id %>
      <%= f.text_field :brewery_id %>

      <%= f.submit "Save Changes", class: "btn btn-large btn-warning" %>
    <% end %>
  </div>
</div>